<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:background="@color/colorPrimaryDark">
    <Button
            android:text="See watched movies"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonWatched"
            app:layout_constraintTop_toBottomOf="@+id/image"
            android:background="@drawable/button_menu"
            android:padding="15dp"
            android:textColor="@color/colorBlue" android:textSize="12sp" android:textAllCaps="true"
            android:layout_marginTop="16dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="show"/>/>
    <Button
            android:text="See movies to watch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonToWatch"
            android:background="@drawable/button_menu"
            android:padding="15dp"
            android:textColor="@color/colorBlue" android:textSize="12sp" android:textAllCaps="true"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonWatched" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:onClick="show"/>/>
    <ImageView
            android:layout_width="207dp"
            android:layout_height="267dp" app:srcCompat="@drawable/logo"
            android:id="@+id/image"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Add new movie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/buttonAdd"
            android:background="@drawable/button_menu"
            android:padding="15dp"
            android:textColor="@color/colorBlue"
            android:textSize="12sp"
            android:textAllCaps="true" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/buttonToWatch"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:onClick="adding"/>/>
</android.support.constraint.ConstraintLayout>